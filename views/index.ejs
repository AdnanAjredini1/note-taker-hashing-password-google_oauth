<%- include("partials/header.ejs") %>

  <style>
    @media (max-width: 575.98px) {
      .main-div {
        padding: 15px 15px;
        display: flex;
        flex-direction: column;
      }

      .card-style {
       max-width: 18rem;
      max-height: 100px;
      }

      .plusi {
        max-width: 70px;
        max-height: 70px;
      }
    }
  </style>

  <div class="main-div" style="
    width: 100%;
    height: 100%;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding-top: 35px;
  ">
    <div style="
      display: flex;
      flex-direction: column;
      left: 20px;
      gap: 20px;
      padding: 50px;
      padding-bottom: 70px;
    ">
      <a href="/new"
        class="bg-slate-500 btn rounded-circle d-flex justify-content-center align-items-center shadow hover-zoom hover-overlay plusButton plusi"
        style="
        background: #4fd0c7;
        color: white;
        width: 70px;
        height: 70px;
        font-size: 3rem;
      "
        onmouseover="this.style.backgroundColor='#15ada3'" onmouseout="this.style.backgroundColor='#4fd0c7'"
      ><i class="bi bi-plus "></i></a>
    </div>

   



    <div style="display: flex; flex-direction: row; gap: 60px; flex-wrap: wrap">
      <% for (let note of notes) { %>

          <div class="card border-success mb-3 shadow card-style" style="width: 18rem; gap: 10px;margin-bottom: 10px;">
            <div class="card-header">
              <%= note.title %>
            </div>
            <div class="card-body text-success" style="height: 100px; overflow: hidden;">
              <p class="card-text">
                <%= note.content.substring(0, 40) %> ...
                  <a href="/notes/<%=note.id%>" class="card-link">view more</a>
              </p>
            </div>
          </div>

          <% } %>
           
    </div>
  </div>

  <%- include("partials/footer.ejs") %>